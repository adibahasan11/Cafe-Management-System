            <Cursor fx:constant="HAND" />
        </cursor></Button>

    <TextField fx:id="txt_o_id" layoutX="180.0" layoutY="163.0" prefHeight="35.0" prefWidth="111.0" text="Order ID" />

    <TextField fx:id="txt_item_id" layoutX="236.0" layoutY="317.0" prefHeight="35.0" prefWidth="223.0" promptText="Item ID" />
