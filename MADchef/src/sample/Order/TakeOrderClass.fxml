            <Cursor fx:constant="HAND" />
        </cursor></Button>
    <Button layoutX="415.0" layoutY="163.0" mnemonicParsing="false" onAction="#GetOrderId" prefHeight="35.0" prefWidth="87.0" style="-fx-background-color: #8F031E;" text="Get ID" textFill="#fffdfd">
        <cursor>
            <Cursor fx:constant="HAND" />
        </cursor></Button>
   <ImageView fitHeight="29.0" fitWidth="32.0" layoutX="21.0" layoutY="16.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../Images/icons8-go-back-26 (2).png" />
      </image>
   </ImageView>

</AnchorPane>
