<AnchorPane prefHeight="680.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Order.TakeOrderClass">
   <ImageView fitHeight="686.0" fitWidth="1200.0" layoutY="-2.0" pickOnBounds="true" preserveRatio="true">
      <image>
         <Image url="@../../Images/order.png" />
      </image>
   </ImageView>

    <Button layoutX="14.0" layoutY="13.0" mnemonicParsing="false" onAction="#BackButton" prefHeight="35.0" prefWidth="60.0" style="-fx-background-color: #000000;" textFill="#8f031e">
