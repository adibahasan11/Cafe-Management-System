<AnchorPane prefHeight="508.0" prefWidth="781.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Orders.PlaceOrder">
    <children>
        <VBox layoutX="8.0" layoutY="7.0" prefHeight="494.0" prefWidth="400.0" style="-fx-background-color: #8F031E;">
            <effect>
                <DropShadow height="4.32" radius="5.83" />
            </effect>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
        </VBox>
        <Button layoutX="14.0" layoutY="22.0" mnemonicParsing="false" onAction="#backButtonPress" prefHeight="14.0" prefWidth="60.0" style="-fx-background-color: f3f3f9;" text="Go Back" textFill="#8f031e">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor></Button>
        <ImageView fitHeight="55.0" fitWidth="87.0" layoutX="686.0" layoutY="422.0" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../../Images/download.jpg" />
            </image>
        </ImageView>
        <Label fx:id="txt_o_id" layoutX="433.0" layoutY="150.0" prefHeight="27.0" prefWidth="100.0" text="Order ID" textFill="#8f031e" />

        <TextField fx:id="txt_item_id" layoutX="433.0" layoutY="200.0" prefHeight="35.0" prefWidth="286.0" promptText="Item ID" />
        <TextField fx:id="txt_quantity" layoutX="433.0" layoutY="250.0" prefHeight="35.0" prefWidth="286.0" promptText="Quantity" />
        <Button layoutX="485.0" layoutY="327.0" mnemonicParsing="false" onAction="#PlaceFinalOrder" prefHeight="35.0" prefWidth="87.0" style="-fx-background-color: #8F031E;" text="Final?" textFill="#fffdfd">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor></Button>
        <Button layoutX="580.0" layoutY="327.0" mnemonicParsing="false" onAction="#PlaceMoreOrder" prefHeight="35.0" prefWidth="87.0" style="-fx-background-color: #8F031E;" text="More?" textFill="#fffdfd">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor></Button>
        <Button layoutX="650.0" layoutY="147.0" mnemonicParsing="false" onAction="#setOrderId" prefHeight="35.0" prefWidth="87.0" style="-fx-background-color: #8F031E;" text="Get ID" textFill="#fffdfd">
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor></Button>
       <!--<Label layoutX="433.0" layoutY="180.0" prefHeight="27.0" prefWidth="76.0" text="Order Name" />-->
    </children>

</AnchorPane>
